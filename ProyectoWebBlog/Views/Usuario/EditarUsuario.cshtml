@model ProyectoWebBlog.Models.ViewModels.UsuarioModel
@{
    ViewBag.Title = "Editar Usuario";
}



<div class="container-fluid justify-content-center formulario">

    @using (Html.BeginForm("EditarUsuario", "Usuario", FormMethod.Post))
    {
        <h2>@ViewBag.Title</h2>
        <br />
        <div class="container">


            <div>
                @Html.LabelFor(usuario => usuario.Id)
                @Html.TextBoxFor(usuario => usuario.Id, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(usuario => usuario.Id, "", new { @class = "text-danger" })
            </div>
            <div>
                @Html.LabelFor(usuario => usuario.Correo)
                @Html.TextBoxFor(usuario => usuario.Correo, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(usuario => usuario.Correo, "", new { @class = "text-danger" })
            </div>
            <div>
                @Html.LabelFor(usuario => usuario.Nombre)
                @Html.TextBoxFor(usuario => usuario.Nombre, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(usuario => usuario.Nombre, "", new { @class = "text-danger" })
            </div>
            <div>
                @Html.LabelFor(usuario => usuario.PrimerApellido)
                @Html.TextBoxFor(usuario => usuario.PrimerApellido, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(usuario => usuario.PrimerApellido, "", new { @class = "text-danger" })
            </div>
            <div>
                @Html.LabelFor(usuario => usuario.SegundoApellido)
                @Html.TextBoxFor(usuario => usuario.SegundoApellido, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(usuario => usuario.SegundoApellido, "", new { @class = "text-danger" })
            </div>
            <div>
                @Html.LabelFor(usuario => usuario.Rol)
                @Html.TextBoxFor(usuario => usuario.Rol, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(usuario => usuario.Rol, "", new { @class = "text-danger" })
            </div>
            <div style="text-align:right">
                <input value="Guardar" class="btn btn-primary" type="submit" style="margin-top: 25px"/>
            </div>


        </div>
    }
</div>