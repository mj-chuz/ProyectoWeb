@model List<ProyectoWebBlog.Models.ViewModels.ComentarioModel>
@{
    ViewBag.Title = "Comentarios" + ViewBag.tituloPublicacion;
}


<div class="container" style="margin-top: 30px">
    <div class="container titulos-principales">
        <h3>Comentarios de la publicación: </h3>
        <h4>@ViewBag.tituloPublicacion</h4>
    </div>

    @foreach (var comentario in Model)
    {
        <div class="card cards-comentarios">
            <div class="card-body">
                <h5 class="card-text">Comentario:</h5>
                <p class="card-text">@comentario.Texto</p>
            </div>
            <div class="card-footer">
                <p class="card-text">Autor: @comentario.Correo</p>
                <p class="card-text">@comentario.FechaHoraPublicado</p>
            </div>
        </div>
    }
</div>
